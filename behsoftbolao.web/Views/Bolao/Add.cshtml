@model DataAccess.Data.Dto.CreateBolaoDto
@{

}

<h1 class="m3-3">Add Bolão</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert">@ViewBag.Message</div>
}

<form method="post">

    <div class="mt-3">
        <label class="form-label">Título</label>
        <input type="text" class="form-control" asp-for="Titulo" />
    </div>

    <div class="mt-3">
        <label class="form-label">Campeonato</label>
        <input type="text" class="form-control" asp-for="CampeonatoAnualId" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>